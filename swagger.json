                "500": {
                    "description": "Server error",
                    "content": {}
                }
            }
        },
            "get": {
                "tags": ["Users"],
                "summary": "Get user balance",
                "parameters": [],
                "security": [{"Bearer": []}],
            "responses": {
                "201": {
                    "description": "Successful operation",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "integer",
                                "example": "10000"
                            }
                        }
                    }
                },
                "401": {
                        "description": "Unauthorized",
