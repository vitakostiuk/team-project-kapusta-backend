                    "description": "Server error",
                    "content": {}
                }
                }
            }
    },
    "/api/auth/logout": {
                "get": {
                    "tags": ["Auth"],
                    "summary": "Logout",
                    "parameters": [],
                    "security": [{"Bearer": []}],
                "responses": {
                    "204": {
                        "description": "Successful. No content",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {}
                    },
                "500": {
                    "description": "Server error",
                    "content": {}
                }
                }
            }
            
    },
    "/api/users/current": {
            "get": {
                "tags": ["Users"],
                "summary": "Current user",
                "parameters": [],
                "security": [{"Bearer": []}],
            "responses": {
                "201": {
                    "description": "Successful operation",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/CurrentResponse"
                            }
                        }
                    }
                },
                "401": {
                        "description": "Unauthorized",
                        "content": {}
